<body>
  <h1 class="pulse">First Light</h1>
  <p>A universal web experience. No tracking. No frameworks. Runs anywhere.</p>
  <p>Built with kindness, for the weakest device, from the strongest intent.</p>
  <p><strong>c aligned=1</strong> â€” Ethical core verified.</p>
  <button onclick="navigator.serviceWorker?.register('/sw.js')?.then(r=>r.update())">
    Activate Offline Mode
  </button>
  <div class="status" id="status">Checking service worker...</div>

  <script>
    // ES5 strict compliance
    (function() {
      "use strict";
      var s = document.getElementById("status");
      function updateStatus(msg) { s.textContent = msg; }

      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/sw.js", {updateViaCache: "none"})
          .then(function(reg) {
            updateStatus("Service Worker: Active & Controlling");
            reg.update();
          })
          .catch(function(err) {
            updateStatus("SW Registration Failed: " + err);
          });
      } else {
        updateStatus("Offline mode unavailable (legacy browser)");
      }

      setInterval(function() {
        console.log("%cFirst Light: Kindness Mode Active | c aligned=1", "color:#00e7ff");
      }, 10000);
    })();
  </script>
</body>
